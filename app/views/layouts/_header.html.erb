<header>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <!-- ログインしていない状態はトップページにログインしている状態は記事一覧へ -->
      <% if user_signed_in? %>
        <a class="navbar-brand text-dark" href="/posts"><strong>digital_data</strong></a>
      <% else %>
        <a class="navbar-brand text-dark" href="/"><strong>digital_data</strong></a>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li>
            <%= link_to about_path, class: "nav-link text-light" do %>
              <button type="button" class="btn btn-outline-dark">
                <i class="fa-solid fa-clipboard-question"></i> About
              </button>
            <% end %>
          </li>
          <li>
            <%= link_to posts_path, class: "nav-link text-light" do %>
              <button type="button" class="btn btn-outline-dark">
                <i class="fa-solid fa-images"></i> 一覧
              </button>
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user.id), class: "nav-link text-light" do %>
              <button type="button" class="btn btn-outline-dark">
                <i class="fa-solid fa-user"></i> マイページ
              </button>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
              <button type="button" class="btn btn-outline-dark">
                <i class="fa-solid fa-right-from-bracket"></i> ログアウト
              </button>
            <% end %>
          </li>

        <% elsif admin_signed_in? %>
          <li>
            <%= link_to admin_users_path, class: "nav-link text-dark" do %>
              <button type="button" class="btn btn-outline-dark">会員一覧</button>
            <% end %>
          </li>
          <li>
            <%= link_to admin_genres_path, class: "nav-link text-dark" do %>
              <button type="button" class="btn btn-outline-dark">ジャンル一覧</button>
            <% end %>
          </li>
          <li style="margin-top: 1px">
            <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-light" do %>
              <button type="button" class="btn btn-outline-dark">Log out</button>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to root_path, class: "nav-link text-dark" do %>
              <button type="button" class="btn btn-outline-dark">
                <i class="fa-solid fa-house"></i> Home
              </button>
            <% end %>
          </li>
          <li>
            <%= link_to about_path, class: "nav-link text-dark" do %>
              <button type="button" class="btn btn-outline-dark">
                <i class="fa-solid fa-clipboard-question"></i> About
              </button>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path, class: "nav-link text-dark" do %>
              <button type="button" class="btn btn-outline-dark">
                <i class="fa-solid fa-user-plus"></i> 新規登録
              </button>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: "nav-link text-dark" do %>
              <button type="button" class="btn btn-outline-dark">
                <i class="fa-solid fa-user-check"></i> ログイン
              </button>
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>