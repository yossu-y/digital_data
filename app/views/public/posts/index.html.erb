<div class="col-4 col-md-4 col-sm-4 mx-auto px-0 mt-5">
  <% @genres.each do |genre| %>
    <%= link_to genre_path(genre), class: "text-light" do %>
      <button type="button" class="btn btn-outline-dark"><%= genre.name %></button>
    <% end %>
  <% end %>
</div>

<%= render "public/posts/index", posts: @posts %>
