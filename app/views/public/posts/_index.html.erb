<div class="container px-0">
  <div class="row">
    <div class="col-11 col-md-11 col-sm-12 mx-auto px-0 my-5">
      <% @posts.each do |post| %>
        <%= link_to post_path(post) do %>
          <%= post.name %>
          <%= post.introduction %><br>
        <% end %>
      <% end %>
    </div>
  </div>
</div
