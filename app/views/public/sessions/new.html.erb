<div class="login">
  <div class="login-head">
    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3219/logo.svg" alt="" />
    <h1 class="login-title">サイト名</h1>
  </div>

  <%= form_with model: @user, url: user_session_path, class: "form" do |f| %>
    <div class="form-group" style="margin: 0">
      <%= f.email_field :email, placeholder: "メールアドレス", autocomplete: "email", class: "form-input" %>
    </div>
    <div class="form-group" style="margin: 0">
      <%= f.password_field :password, placeholder: "パスワード", autocomplete: "current-password", class: "form-input" %>
    </div>
    <%= f.submit "ログイン", class: "login-btn" %>
  <% end %>
</div>

<%= render "public/shared/links" %>
