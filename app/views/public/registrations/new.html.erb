<div class="login">
  <div class="login-head">
    <%= render "public/shared/error_messages", resource: resource %>
    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3219/logo.svg" alt="" />
    <h1 class="login-title">サイト名</h1>
  </div>

  <%= form_with model: @user, url: user_registration_path, class: "form" do |f| %>
    <div class="form-group" style="margin: 0">
      <%= f.text_field :name, placeholder: "名前", class: "form-input" %>
    </div>
    <div class="form-group" style="margin: 0">
      <%= f.text_field :screen_name, placeholder: "ニックネーム", class: "form-input" %>
    </div>
    <div class="form-group" style="margin: 0">
      <%= f.email_field :email, placeholder: "メールアドレス", autocomplete: "email", class: "form-input" %>
    </div>
    <div class="form-group" style="margin: 0">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)", class: "form-input" %>
    </div>
     <div class="form-group" style="margin: 0">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）", class: "form-input" %>
    </div>

    <%= f.submit "アカウント登録", class: "login-btn" %>
  <% end %>

</div>
<%= render "public/shared/links" %>


