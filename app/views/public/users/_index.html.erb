<div class="container px-0">
  <div class="row">
    <div class="col-11 col-md-11 col-sm-12 mx-auto px-0 my-5">
      <table class="table">
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% users.each do |user| %>
          <tr style="cursor: pointer" onclick="window.location.href='<%= user_path(user) %>'" onmouseover="this.style.backgroundColor='#dcdcdc'" onmouseout="this.style.backgroundColor='#fff'">
            <td width="15%"><%= image_tag user.get_profile_image, class: "rounded-circle users-img" %></td>
            <td width="15%"><%= user.name %></td>
            <td><%= user.introduction %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>